{
    "configurations": [
        {
            "name": "arm_c_cpp_properties",
            "compilerPath": "{EGCC_PATH}\\bin\\arm-none-eabi-gcc.exe",
            "includePath": [
				"{EGCC_PATH}\\arm-none-eabi\\include",
				"{EGCC_PATH}\\arm-none-eabi\\include\\sys\\",
				"{EGCC_PATH}\\lib\\**",

				"${workspaceRoot}\\Drivers\\**",
				"${workspaceRoot}\\Src\\**",
                "${workspaceRoot}\\Inc\\**"
            ],
            "defines": [
				"USE_HAL_DRIVER",
				"STM32L052xx",
				"M0",
				"GCC_ARMCM0"
            ],
            "cStandard": "c11",
            "cppStandard": "c++17",
			"intelliSenseMode": "gcc-x64"
        }
    ],
    "version": 4
}